#include<iostream>
#include<algorithm>
using namespace std;

typedef struct ball
{
	int color;
	int size;
	int total;
}Ball;
bool compare(const Ball& a, const Ball& b)
{
	if (a.size > b.size)
	{
		return true;
	}
	else if (a.size == b.size)
	{
		return a.color < b.color;
	}
	else
	{
		return false;
	}
}
int main()
{
	int total=0;
	int testcase;
	cin >> testcase;
	Ball* ball = new Ball[testcase];
	int k = 0;
	for (size_t i = 0; i < testcase; i++)
	{
		cin >> ball[i].color >> ball[i].size;
	}

	sort(ball, ball + testcase, compare);

	for (size_t i = 0; i < testcase; i++)
	{
		ball[i].total = total;

		if (ball[i].size == ball[k].size || ball[i].color == ball[k].color)
		{
			ball[i].total -= ball[k].size;
		}
		
	}

	for (size_t i = 0; i < testcase; i++)
	{
		cout << ball[i].total << endl;
	}
}
